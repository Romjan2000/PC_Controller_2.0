# ========================
# PC CONTROLLER CONFIG
# ========================
# Copy this file to .env and edit the values

# --- SECURITY ---
# Password for UI Login Screen (change this!)
APP_PASSWORD_PLAIN=changeme123

# Hashed password for Admin Actions (Shutdown/Restart)
# Generate with: python -c "import hashlib; print(hashlib.sha256('YOUR_PASSWORD'.encode()).hexdigest())"
APP_PASSWORD_HASH=REPLACE_WITH_YOUR_HASH

# --- TELEGRAM NOTIFICATIONS (Optional) ---
# Create a bot with @BotFather and get your chat ID from @userinfobot
TELEGRAM_BOT_TOKEN=REPLACE_ME
TELEGRAM_CHAT_ID=REPLACE_ME

# --- SERVER SETTINGS ---
PORT=1010
MAX_UPLOAD_SIZE_MB=1024

# --- AUTO UPDATE ---
# Enable/disable automatic updates (true/false)
AUTO_UPDATE=true

# How often to check for updates in seconds (default: 300 = 5 minutes)
UPDATE_CHECK_INTERVAL=300

# GitHub repository for updates (format: username/repo)
GITHUB_REPO=Romjan2000/PC_Controller_2.0

